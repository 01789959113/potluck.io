 <body>
 
 
     <!-- header section -->
     <header class="signup_header">
 
         <!-- navbar section -->
         <%- include('./partials/nav.ejs') %>


        <div class="nav-text">
            <h1>Please Sign-UP </h1>
            <h6>Come join with us</h6>
            <form class="d-flex">
                <button class="nav-txt-btn"> <a href="/bookTable">Book a table</a></button>
            </form>
        </div>
    </header>

    <!-- signup section -->
    <section class="signup-section">
        <div class="container py-5">
            <div class="row">
                <div class="col-md-12 col-12 col-lg-6 col-xxl-6">
                    <form action="/signup" method="POST"  class="row g-3 form">
                        <i class="fas fa-user-plus"></i>
                        <h1>Create your Potluck Account </h1>

                        <!-- error message -->
                        <%- include('./partials/signupErrMsg.ejs') %>
                        
                        <div class="col-12">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" name="name" 
                            value="<%= typeof name !='undefined'? name :'' %>" >
                        </div>
                        <div class="col-12">
                            <label for="mobile" class="form-label">Mobile</label>
                            <input type="number" class="form-control" id="mobile" name="mobile" 
                            value="<%= typeof mobile !='undefined'? mobile :'' %>" >
                        </div>
                        <div class="col-12">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" 
                            value="<%= typeof email !='undefined'? email :'' %>" >
                        </div>
                        <div class="col-md-6">
                            <label for="password" class="form-label">Password</label>
                            <input type="text" class="form-control" id="password" name="password" 
                            value="<%= typeof password !='undefined'? password :'' %>" >
                        </div>
                        <div class="col-md-6">
                            <label for="confirmpassword" class="form-label">Confirm Password</label>
                            <input type="text" class="form-control" id="confirmpassword" name="confirmpassword" 
                            value="<%= typeof confirmpassword !='undefined'? confirmpassword :'' %>" >
                        </div>
                        <div class="col-12">
                            <button class="form-btn" type="submit">Sign-up</button>
                        </div>
                    </form>
                </div>
                <div class="col-md-12 col-12 col-lg-6 col-xxl-6">
                    <h1 class="signup-info-heading">Sing-UP Information </h1>
                    <p class="signup-info-text">
                        You Will be part of our familly by register your Information. Resgister for this site will
                        allow you to better experience with us.Just fill the <span>All Information </span> in register
                        box. Your personal data will be used to support your experience throughout this website. And we
                        won't be share your personal Information with anyone. <br> Already have an account? <a href="/login">log-in </a>
                    </p>
                </div>

            </div>
        </div>
    </section>

    
      <!-- map section -->
      <%- include('./partials/map.ejs') %>

      <!-- footer section -->
      <%- include('./partials/footer.ejs') %>


 






